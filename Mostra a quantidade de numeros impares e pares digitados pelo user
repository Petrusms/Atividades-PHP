<?php

$quant=readline("Informe a quantidades de números que deseja que eu leia:");

$par=0;
$imp=0;

for($i=1; $i<$quant; $i++)
{
    $num=readline("Informe o $i ° número:");

    if($num%2==0)
    {
        $par++;
    }else{
        $imp++;
    }
}
print"A quantidades de números pares foi $par, e a de impares foi $imp";
?>
