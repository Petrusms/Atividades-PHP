        </form>
    </div>

    <div id="pokemons">

        <?php for($i = 0; $i<20; $i++): ?>
            <div class="pokemon">
                <img src=<?= $pokemons['results'][$i]['sprites']['other']['dream_world']['front_default'] ?>alt="Gengar" width="200px">

                <h1><?= $pokemons['results'][$i]['name'] ?></h1>
                <p>peso: 40.5</p>
                <p>altura: 1.5</p>

            </div>
        <?php endfor; ?>
    </div>

