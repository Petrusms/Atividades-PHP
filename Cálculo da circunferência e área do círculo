<?php

function area($raio){
    $area=3.14*$raio*$raio;
    return $area;
}

function circuferencia($raio){
    $circuferencia=2*3.14*$raio;
    return $circuferencia;
}
$raio=readline("Informe o raio da circuferência:");
$area=area($raio);
$circ=circuferencia($raio);
print("A área do círculo é $area e o tamanho da circuferência é $circ")
?>
